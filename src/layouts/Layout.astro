---
import Metahead from '../layouts/Metahead.astro';
import Menu from '../components/Menu.astro';


interface Props {
  title: string;
  description: string;
  url: string;
  image: string;
}

const { title, description, url, image } = Astro.props;
---

<!doctype html>


<html lang="es" dir="ltr">
<Metahead title={title} description={description} url={url} image={image} />


  <body>
	<Menu />
		<main>
			<slot />
		</main>
  </body>


</html>

<style is:global>

@tailwind utilities;

@font-face {
    font-family: "montserrat";
    font-style: normal;
    font-weight: 400 800;
    font-optical-sizing: auto;
    font-display: swap;
    font-stretch: normal;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/montserrat:vf@latest/latin-wght-normal.woff2) format('woff2-variations');
    unicode-range: U+0000-00FF;
    font-feature-settings: "kern", "liga", "calt";
    font-variation-settings: "wght" 400 800;
  }

	html, body {
		@apply flex flex-col m-0 p-0 box-border min-h-screen  w-screen antialiased bg-bodydark text-fontlight font-montserrat justify-center items-center ;
	}

	main {
	@apply flex flex-col justify-center items-center w-full h-screen;
	}

	section, div {
		@apply m-0 p-8 gap-4 text-center text-base font-normal;
	}


	 
</style>
