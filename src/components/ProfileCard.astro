---
import userData from "../data/user.json";

const { profileData, links, stats, description } = userData;
---

<article class="grid gap-4 p-4 rounded-md place-items-center">

  

   <!-- Perfil Optimizado -->
   <figure
   class="w-24 h-24 rounded-full overflow-hidden border-2 border-solid relative bg-cover bg-center p-0 m-0"
   style={`background-image: url('${profileData.profileVideo.placeholder}');`}
   aria-label="Perfil de {profileData.profileName}"
 >
   <!-- <video
     autoplay
     muted
     loop
     playsinline
     preload="metadata"
     class="w-full h-full object-cover aspect-auto"
     aria-label="Video de perfil de {profileData.profileName}"
     oncanplay="this.parentElement.style.backgroundImage = 'none';"
   >
     <source
       src={profileData.profileVideo.src}
       type="video/mp4"
     />
     Tu navegador no soporta videos en formato MP4.
   </video> -->
 </figure>

         <!-- Status en lÃ­nea -->
      <div class="flex justify-center items-center gap-2 bg-black text-gray-400 text-xs italic py-2 px-4 rounded-full">
        <span class="h-2 w-2 bg-green-400 rounded-full animate-pulse"></span>
        <span>{profileData.onlineStatusText}</span>
      </div>
    </div>

     <!-- Profile Name & Description -->
     <div class="w-full grid grid-cols-1 place-content-center gap-2">
      {links.slice(0, 1).map((link) => (
        <span
          class="flex justify-center items-center gap-2 text-2xl text-center font-bold"
        >{link.title} <img src={link.icon} alt={`${link.title} icon`} 
        class="w-5 h-5" /></span>
        <h1 class="font-normal">{link.description}</h1>
      ))}
    </div>

      <!-- Btn Instagran & WhatsApp -->
  <div class="w-full grid grid-cols-2 gap-2 place-content-center ">
      {links.slice(2, 4).map((link, index) => (
        <a
          href={link.url}
          class="flex justify-center items-center gap-1 p-4 bg-slate-700 text-center hover:bg-gray-600 rounded-lg transition-colors duration-300 text-xs btn"
          aria-label={link.description}
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            src={link.icon}
            alt={`${link.title} icon`}
            class={`w-4 h-4` }
          />
            {link.title}
        </a>
      ))}
    </div> 
   
    <!-- Location Tags -->
    <div class="flex flex-col">
      <h2 class="text-lg text-center font-normal">
        -{profileData.locationTags[0]}-
      </h2>
      <div>
        {profileData.locationTags.slice(1).map((tag) => (
          <h2
            class="inline-flex  p-1 text-xs font-normal italic text-center text-gray-300 m-0"
          >
            -{tag}-
          </h2>
        ))}
      </div>
    </div>


<!-- Btn Redes -->
    <div class="flex flex-row justify-center items-center gap-2">
      {links.slice(4, 7).map((link) => {
        const hoverColor = {
          Facebook: 'hover:bg-blue-600',
          LinkedIn: 'hover:bg-blue-600',
          TikTok: 'hover:bg-black',
        } as const;
    
        const hoverClass = hoverColor[link.title as keyof typeof hoverColor] || '';
    
        return (
          <a
            href={link.url}
            class={`flex justify-center items-center p-2 bg-slate-700 rounded-full transition-colors duration-300 ${hoverClass}`}
            aria-label={link.description}
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src={link.icon} alt={`${link.title} icon`} class="w-5 h-5" />
          </a>
        );
      })}
    </div>
    

 <!-- Btn Links -->
    <div class="w-full grid grid-cols-1 gap-2 place-content-center ">
      {links.slice(7,10).map((link, index) => (
        <a
          href={link.url}
          class="flex justify-center items-center gap-2 p-6 bg-black text-center hover:bg-gray-600 rounded-lg transition-colors duration-300 text-sm  border-s-blue-500 border-solid border-t-0 border-b-0 border-e-0 font-bold"
          aria-label={link.description}
          target="_blank"
          rel="noopener noreferrer"
        >
          
            {link.title}
        </a>
      ))}
    </div>
   

</article>












