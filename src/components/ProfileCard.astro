---
import userData from "../data/user.json";


const profileVideo = "/";
const profilePlaceholder = "/";

const { profileData, links, stats, description } = userData;
---

<article class="grid gap-4 w-[375px] bg-gray-800 p-4 border-solid border-4  border-blue-700 rounded-md place-items-center">

  

    <!-- Perfil Optimizado -->
    <figure
    class="w-24 h-24 bg-green-400 rounded-full overflow-hidden border-2 border-solid relative bg-[url('data:{profilePlaceholder}')] bg-cover bg-center p-0 m-0"
    aria-label="Perfil de {{profileData.profileName}}"
  >
    <video
      autoplay
      muted
      loop
      playsinline
      preload="auto"
      class="w-full h-full object-cover aspect-video"
      aria-label="Video de perfil de {{profileData.profileName}}"
      oncanplaythrough="this.parentElement.style.backgroundImage = 'none';"
    >
      <source src="{{profileVideo}}" type="video/mp4" />
      <!-- Fallback content in case the video cannot be played -->
      Tu navegador no soporta la reproducción de videos.
    </video>
  </figure>












         <!-- Status en línea -->
      <div class="flex justify-center items-center gap-2 bg-black text-gray-400 text-xs italic py-2 px-4 rounded-full">
        <span class="h-2 w-2 bg-green-400 rounded-full animate-pulse"></span>
        <span>{profileData.onlineStatusText}</span>
      </div>
    </div>

     <!-- Profile Name & Description -->
     <div class="w-full grid grid-cols-1 place-content-center gap-2">
      {links.slice(0, 1).map((link) => (
        <h1
          class="flex justify-center items-center gap-2 text-2xl text-center"
        >{link.title} <img src={link.icon} alt={`${link.title} icon`} 
        class="w-5 h-5" /></h1>
        <span>{link.description}</span>
      ))}
    </div>


      <!-- Btn Instagran & WhatsApp -->
  <div class="w-full grid grid-cols-2 gap-2 place-content-center ">
      {links.slice(2, 4).map((link, index) => (
        <a
          href={link.url}
          class="flex justify-center items-center gap-1 py-2 px-4 bg-black text-center hover:bg-gray-600 rounded-lg transition-colors duration-300 text-xs btn"
          aria-label={link.description}
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            src={link.icon}
            alt={`${link.title} icon`}
            class={`w-4 h-4` }
          />
            {link.title}
        </a>
      ))}
    </div> 
   


    <!-- Location Tags -->
    <div class="flex flex-col">
      <h2 class="text-lg text-center font-normal">
        -{profileData.locationTags[0]}-
      </h2>
      <div>
        {profileData.locationTags.slice(1).map((tag) => (
          <h2
            class="inline-flex  p-1 text-xs font-normal italic text-center text-gray-300 m-0"
          >
            -{tag}-
          </h2>
        ))}
      </div>
    </div>


<!-- Btn Redes -->
    <div class="flex flex-row justify-center items-center gap-2">
      {links.slice(4).map((link) => {
        const hoverColor = {
          Facebook: 'hover:bg-blue-600',
          LinkedIn: 'hover:bg-blue-600',
          TikTok: 'hover:bg-black',
        } as const;
    
        const hoverClass = hoverColor[link.title as keyof typeof hoverColor] || '';
    
        return (
          <a
            href={link.url}
            class={`flex justify-center items-center p-2 bg-black rounded-full transition-colors duration-300 ${hoverClass}`}
            aria-label={link.description}
            target="_blank"
            rel="noopener noreferrer"
          >
            <img src={link.icon} alt={`${link.title} icon`} class="w-5 h-5" />
          </a>
        );
      })}
    </div>
    









 <!-- Btn Links -->
    <div class="w-full grid grid-cols-1 gap-2 place-content-center ">
      {links.slice(7,10).map((link, index) => (
        <a
          href={link.url}
          class="flex justify-center items-center gap-2 py-4 px-4 bg-black text-center hover:bg-gray-600 rounded-lg transition-colors duration-300 text-sm  border-s-blue-500 border-solid border-t-0 border-b-0 border-e-0"
          aria-label={link.description}
          target="_blank"
          rel="noopener noreferrer"
        >
          {/* <img
            src={link.icon}
            alt={`${link.title} icon`}
            class={`w-4 h-4` }
          /> */}
            {link.title}
        </a>
      ))}
    </div>
   
</article>






